<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_single_list_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="3dp"
        android:padding="0dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_circle_primary_light_24dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/widget_recipe_ingredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/widget_recipe_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_marginRight="4dp"
        android:layout_gravity="left|center_vertical"
        tools:text="50"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/widget_recipe_measure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:layout_gravity="left|center_vertical"
        tools:text="CUP"
        android:textColor="@color/white"/>


</LinearLayout>