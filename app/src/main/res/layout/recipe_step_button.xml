<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recipe_step_height"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/recipe_step_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="@dimen/recipe_step_margin"
        android:layout_marginLeft="@dimen/recipe_step_margin"
        android:layout_marginRight="@dimen/recipe_step_margin"
        android:textSize="20sp"
        android:gravity="center"
        />

</LinearLayout>